<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SupplementaryVids"
    android:background="@drawable/blueabs">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/phinmalogo"
            android:layout_marginTop="5dp"
            android:layout_width="210dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/phinma" />

        <ImageView
            android:id="@+id/citelogo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/cite" />

        <ImageView
            android:id="@+id/upanglogo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/upang" />

    </LinearLayout>
        <TextView
            android:id="@+id/lblabt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Supplementary Online Videos\n"
            android:textAlignment="center"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"/>


        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/html"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:autoPlay="false"/>
        <TextView
            android:id="@+id/htmlvidtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="HTML\n"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"
            android:background="@drawable/border3"/>

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/css"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:autoPlay="false"/>
        <TextView
            android:id="@+id/cssvidtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="CSS\n"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"
            android:background="@drawable/border3"/>

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/javascript"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:autoPlay="false"/>

        <TextView
            android:id="@+id/jsvidtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="Javascript\n"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"
            android:background="@drawable/border3"/>

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/php"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:autoPlay="false"/>
        <TextView
            android:id="@+id/phpvidtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="PHP\n"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"
            android:background="@drawable/border3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="\n\n"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"/>
    </LinearLayout>
</ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sky"
        app:itemIconTint="@drawable/highlightselect"
        app:itemTextColor="@drawable/highlightselect"
        android:id="@+id/btmnav"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>